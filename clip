    <script>
        document.getElementById('previewBtn').addEventListener('click', function() {
            const videoUrl = document.getElementById('videoUrl').value;
            const startTime = document.getElementById('startTime').value;
            const endTime = document.getElementById('endTime').value;
            
            if (!videoUrl) {
                alert('يرجى إدخال رابط فيديو يوتيوب');
                return;
            }
            
            // استخراج معرف الفيديو من الرابط
            const videoId = extractVideoId(videoUrl);
            
            if (!videoId) {
                alert('رابط يوتيوب غير صالح');
                return;
            }
            
            // بناء رابط التشغيل مع وقت البداية
            const embedUrl = `https://www.youtube.com/embed/${videoId}?start=${startTime || 0}&end=${endTime || 60}`;
            
            // عرض المعاينة
            const previewDiv = document.getElementById('videoPreview');
            previewDiv.innerHTML = `<iframe src="${embedUrl}" allowfullscreen></iframe>`;
        });
        
        document.getElementById('downloadBtn').addEventListener('click', function() {
            alert('للأسف، تحميل فيديوهات يوتيوب مباشرة من المتصفح غير ممكن بسبب قيود أمنية. يمكنك استخدام أدوات خارجية مثل yt-dlp أو مواقع متخصصة لتحميل مقاطع يوتيوب.');
        });
        
        // دالة لاستخراج معرف الفيديو من رابط يوتيوب
        function extractVideoId(url) {
            const regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#&?]*).*/;
            const match = url.match(regExp);
            return (match && match[7].length === 11) ? match[7] : false;
        }
    </script>
