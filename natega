<body>
  <div class="container">
    <header>
      <div class="logo"><i class="fas fa-graduation-cap fa-2x"></i></div>
      <h1>منصة نتائج الطلاب</h1>
      <p>مدرسة منشأة الدهب القبلية الابتدائية</p>
    </header>

    <div class="card">
      <h3>استعلام عن النتيجة</h3>
      <div class="form-group">
        <input type="text" id="searchSeat" placeholder="أدخل رقم الجلوس (مثال: 1001)">
      </div>
      <button class="btn" onclick="getResult()">
        <i class="fas fa-search"></i> عرض النتيجة
      </button>
    </div>

    <div class="loading" id="loading">
      <i class="fas fa-spinner"></i>
      <p>جاري تحميل النتيجة...</p>
    </div>

    <div id="result" class="result-box">
      <div class="card">
        <div id="student-info" class="student-info"></div>
        <div style="overflow-x: auto;">
          <table id="result-table">
            <thead>
              <tr>
                <th>المادة</th>
                <th>الدرجة</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
        <div id="total-box" class="total-box"></div>
      </div>
    </div>
  </div>

  <script>
    // بيانات الطلاب الافتراضية (نموذج)
    const students = {
      "1001": {
        name: "أحمد محمد",
        gradeLevel: "الصف الخامس",
        grades: {
          "الرياضيات": 85,
          "العلوم": 90,
          "اللغة العربية": 88
        }
      },
      "1002": {
        name: "سارة علي",
        gradeLevel: "الصف الخامس",
        grades: {
          "الرياضيات": 92,
          "العلوم": 87,
          "اللغة العربية": 95
        }
      },
      "1003": {
        name: "محمود خالد",
        gradeLevel: "الصف السادس",
        grades: {
          "الرياضيات": 78,
          "العلوم": 82,
          "اللغة العربية": 80
        }
      }
    };

    // دالة لعرض النتيجة
    function getResult() {
      const seatNumber = document.getElementById('searchSeat').value.trim();
      const resultBox = document.getElementById('result');
      const studentInfo = document.getElementById('student-info');
      const tbody = document.querySelector('#result-table tbody');
      const totalBox = document.getElementById('total-box');
      const loading = document.getElementById('loading');

      if (!seatNumber) {
        alert('يرجى إدخال رقم الجلوس');
        return;
      }

      loading.style.display = 'block';
      resultBox.style.display = 'none';
      resultBox.classList.remove('show');

      setTimeout(() => {
        if (students[seatNumber]) {
          const student = students[seatNumber];
          studentInfo.innerHTML = `
            <div class="info-item"><i class="fas fa-user"></i><span>اسم الطالب: ${student.name}</span></div>
            <div class="info-item"><i class="fas fa-id-card"></i><span>رقم الجلوس: ${seatNumber}</span></div>
            <div class="info-item"><i class="fas fa-school"></i><span>الصف الدراسي: ${student.gradeLevel}</span></div>
          `;

          tbody.innerHTML = '';
          let total = 0;
          let maxTotal = Object.keys(student.grades).length * 100; // افتراضي 100 لكل مادة
          for (const [subject, score] of Object.entries(student.grades)) {
            tbody.innerHTML += `<tr><td>${subject}</td><td>${score} / 100</td></tr>`;
            total += score;
          }

          totalBox.innerText = `المجموع الكلي: ${total} / ${maxTotal}`;
          loading.style.display = 'none';
          resultBox.style.display = 'block';
          setTimeout(() => resultBox.classList.add('show'), 10);
          resultBox.scrollIntoView({ behavior: 'smooth' });
        } else {
          alert(`رقم الجلوس "${seatNumber}" غير موجود. جربي 1001 كمثال.`);
          loading.style.display = 'none';
        }
      }, 1000); // محاكاة تحميل البيانات
    }

    // دعم زر Enter للبحث
    document.getElementById('searchSeat').addEventListener('keypress', function (e) {
      if (e.key === 'Enter') getResult();
    });
  </script>
</body>
</html>
